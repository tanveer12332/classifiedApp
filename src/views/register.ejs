<% include header.ejs %>
<div ng-controller="regCtrl">
 <!--main sub page heading-->
    <section id="page-head">
        <div class="container">
            <div class="row col-md-12">
                <div class="page-heading">
                    <h1>LOGIN</h1>
                    <h4>Login Required</h4>
                </div>
            </div>
        </div>
    </section><!--end main page heading-->
    <section id="formSubmit">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                    <div class="user-form">
                        <div class="user-form-set">
                            <h4 ng-model="RegStatus">{{RegStatus}}</h4>
                            <form  action="/setcontacts" method="post" class="form-group" name="myForm" novalidate>
                                <div class="form-input" ng-show="isVisible">
                                    <span class="fa fa-user form-control-feedback"></span>
                                    <input class="form-control" type="text" ng-model="contact.userName" name="userName" placeholder="User Name" required>
                                     <span style="color:red" ng-show="myForm.userName.$dirty && myForm.userName.$invalid">
                                            <span ng-show="myForm.userName.$error.required">Username is required.</span>
                                    </span>
                                </div>
                               <div class="form-input" ng-show="isVisible">
                                    <span class="fa fa-user form-control-feedback"></span>
                                    <input class="form-control" type="email" ng-model="contact.userEmail" name="userEmail" placeholder="User Email" required>
                                    <span style="color:red" ng-show="myForm.userEmail.$dirty && myForm.userEmail.$invalid">
                                        <span ng-show="myForm.userEmail.$error.required">Email is required.</span>
                                        <span ng-show="myForm.userEmail.$error.userEmail">Invalid email address.</span>
                                        
                                    </span>
                                </div>
                                <div class="form-input" ng-show="isVisible">
                                    <span class="fa fa-unlock-alt form-control-feedback"></span>
                                    <input class="form-control" type="password" ng-model="contact.userPassword" name="userPassword" placeholder="Password">
                                    
                                </div>
                                
                                <div class="form-input">
                                    <input type="submit" name="register" ng-show="isVisible" value="Register Now" ng-click="addContact()"  ng-disabled="myForm.userName.$dirty && myForm.userName.$invalid ||
  myForm.userEmail.$dirty && myForm.userEmail.$invalid">
                                </div>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>


<% include footer.ejs %>

<script src="controllers/register.js"></script>